set path = ( BASEPATH/bin BASEPATH/sbin $path )

if ( $?MANPATH) then
  setenv MANPATH BASEPATH/share/man:BASEPATH/man:$MANPATH
else
  setenv MANPATH BASEPATH/share/man:BASEPATH/man:/usr/local/share/man:/usr/local/man:/usr/share/man:/usr/man
endif

if ( $?INFOPATH ) then
  setenv INFOPATH BASEPATH/share/info:BASEPATH/info:$INFOPATH
else
  setenv INFOPATH BASEPATH/share/info:BASEPATH/info:/usr/local/share/info:/usr/local/lib/info:/usr/local/info:/usr/share/info:/usr/info
endif

