$| = 1;
use v5.6.0;  # perl 5.6.0 or newer required
use strict;

use lib "@BASEPATH@/lib/perl5";

### quick check so see if all the user wants is the version number

if ($#ARGV >= 0 and $ARGV[0] =~ /^-?-v(ersion)?$/i) {
  # version of the package manager
  use Fink::FinkVersion;
  print "Package manager version: $fink_version\n";

  # distribution version
  my $dv;
  if (-f "@BASEPATH@/etc/fink-release") {
    chomp($dv = `cat @BASEPATH@/etc/fink-release`);
  } else {
    $dv = "unknown";
  }
  print "Distribution version: $dv\n";

  exit 0;
}

### now load the useful modules

use Fink::Services qw(&read_config &execute);
use Fink::Config qw($basepath);
use Fink::Engine;

### read config

my ($config, $configpath);
$configpath = "@BASEPATH@/etc/fink.conf";
if (-f $configpath) {
  $config = &read_config($configpath);
} else {
  print "ERROR: Configuration file \"$configpath\" not found.\n";
  exit 1;
}

### setup environment

# are we root?
if ($> != 0) {
  # TODO: add a config value to control what method is used

  my $cmd = "@BASEPATH@/bin/fink";
  if ($#ARGV >= 0) {
    $cmd .= " '".join("' '", @ARGV)."'";
  }
  $cmd = "sudo $cmd";
  exit &execute($cmd, 1);
}

# set useful umask
umask oct("022");

# set PATH so we find dpkg and *-config scripts
$ENV{PATH} = "$basepath/sbin:$basepath/bin:".$ENV{PATH};

### create engine

my $engine = Fink::Engine->new_with_config($config);

### process command line (or enter interactive mode)

if ($#ARGV >= 0) {
  $engine->process(@ARGV);
} else {
  # TODO: enter interactive mode
}

### eof
exit 0;
